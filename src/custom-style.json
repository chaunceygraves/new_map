{
    "sources": {
        "neighborhoods": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        }
    },
    "layers": [{
        "id": "neighborhoods-outline",
        "type": "line",
        "source": "neighborhoods",
        "paint": {
            "line-width": [
                "case",
                ["boolean", ["feature-state", "hover"], false],
                3,
                1
            ],
            "line-color": "grey"
        }
    }, {
        "id": "neighborhoods",
        "type": "fill-extrusion",
        "source": "neighborhoods",
        "paint": {
            "fill-extrusion-color": {
                "property": "count",
                "stops": [
                    [0, "#ffffd4"],
                    [30, "#fee391"],
                    [100, "#fec44f"],
                    [300, "#fe9929"],
                    [600, "#ec7014"],
                    [800, "#cc4c02"],
                    [1200, "#8c2d04"]
                ]
            },
            "fill-extrusion-opacity": 0.5,
            "fill-extrusion-height": [
                "+",
                [
                    "*",
                    ["get", "count"],
                    5
                ],
                [
                    "case",
                    ["boolean", ["feature-state", "hover"], false],
                    1000,
                    0
                ]
            ],
            "fill-extrusion-base": [
                "case",
                ["boolean", ["feature-state", "hover"], false],
                1000,
                0
            ]
        }
    }]
}
