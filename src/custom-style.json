{
    "sources": {
        "sites": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        },
        "neighborhoods": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        },
        "transit": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        }
    },
    "layers": [
        {
            "id": "neighborhoods-outline",
            "type": "line",
            "source": "neighborhoods",
            "paint": {
                "line-width": [
                    "case",
                    ["boolean", ["feature-state", "hover"], false],
                    3,
                    1
                ]
            }
        },
        {
            "id": "neighborhoods-fill",
            "type": "fill-extrusion",
            "source": "neighborhoods",
            "paint": {
                "fill-extrusion-color": [
                    "step",
                    ["get", "count"],
                    "#fef0d9", 30,
                    "#fdd49e", 100,
                    "#fdbb84", 300,
                    "#fc8d59", 800,
                    "#e34a33", 1200,
                    "#b30000"
                ],
                "fill-extrusion-opacity": 0.5,
                "fill-extrusion-height": [
                    "+",
                    ["*", ["get", "count"], 5],
                    [
                        "case",
                        ["boolean", ["feature-state", "hover"], false],
                        1000,
                        0
                    ]
                ],
                "fill-extrusion-base": [
                    "case",
                    ["boolean", ["feature-state", "hover"], false],
                    1000,
                    0
                ]
            }
        }
    ]
}
